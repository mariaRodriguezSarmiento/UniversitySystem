<p style="color: green"><%= notice %></p>

<%= render @lesson %>
<p>
  <strong>Created by:</strong>
  <%= @lesson.user.full_name %>
</p>

<div>
  <h2>Students Enrolled</h2>
  <% if @students.any? %>
    <ul>
      <% @students.each do |student| %>
        <li><%= student.full_name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No students enrolled in this lesson yet.</p>
  <% end %>
</div>

<div>
  <%= link_to "Edit this lesson", edit_lesson_path(@lesson) %> |
  <%= link_to "Back to lessons", lessons_path %>
  <%= button_to "Add Student", new_student_lesson_path(@lesson), method: :get %>

  <%= button_to "Destroy this lesson", @lesson, method: :delete %>
</div>
