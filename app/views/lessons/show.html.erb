<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <p style="color: green;"><%= notice %></p>
        <h1>Lesson Details</h1>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <%= render @lesson %>
          <p><strong>Created by:</strong> <%= @lesson.user.full_name %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Enrolled Students</h5>
        </div>
        <div class="card-body">
          <% if @students.any? %>
            <ul class="list-group">
              <% @students.each do |student| %>
                <li class="list-group-item"><%= student.full_name %></li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No students enrolled yet.</p>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to "Edit", edit_lesson_path(@lesson), class: "btn btn-primary mr-2" %>
        <%= link_to "Back to Lessons List", lessons_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Enroll Student", new_student_lesson_path(@lesson), method: :get, class: "btn btn-primary mr-2" %>
        <%= button_to "Delete", @lesson, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
