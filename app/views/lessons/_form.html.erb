<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: lesson, class: "needs-validation", novalidate: true) do |form| %>
        <% if lesson.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h4>
            <ul>
              <% lesson.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, "Name", class: "form-label font-weight-bold" %>
          <%= form.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter a name for the lesson.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :code, "Code", class: "form-label font-weight-bold" %>
          <%= form.text_field :code, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter a code for the lesson.
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <%= form.label :start_date, "Start Date", class: "form-label font-weight-bold" %>
            <%= form.date_field :start_date, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please enter a start date for the lesson.
            </div>
          </div>
          <div class="col">
            <%= form.label :end_date, "End Date", class: "form-label font-weight-bold" %>
            <%= form.date_field :end_date, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please enter an end date for the lesson.
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <%= form.label :start_time, "Start Time", class: "form-label font-weight-bold" %>
            <%= form.time_field :start_time, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please enter a start time for the lesson.
            </div>
          </div>
          <div class="col">
            <%= form.label :end_time, "End Time", class: "form-label font-weight-bold" %>
            <%= form.time_field :end_time, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please enter an end time for the lesson.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :teacher_id, "Teacher", class: "form-label font-weight-bold" %>
          <%= form.select :teacher_id, options_for_select(Teacher.all.map { |t| [t.full_name, t.id] }), { prompt: "Select Teacher" }, class: "form-select", required: true %>
          <div class="invalid-feedback">
            Please select a teacher for the lesson.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :lounge_id, "Lounge", class: "form-label font-weight-bold" %>
          <%= form.select :lounge_id, options_for_select(Lounge.all.map { |l| [l.name, l.id] }), { prompt: "Select Lounge" }, class: "form-select", required: true %>
          <div class="invalid-feedback">
            Please select a lounge for the lesson.
          </div>
        </div>

        <%= form.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
