<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: student) do |form| %>

        <% if student.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h4>
            <ul>
              <% student.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :first_name, "First Name", style: "font-weight: bold; display: block;" %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, "Last Name", style: "font-weight: bold; display: block;" %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :document_number, "Document Number", style: "font-weight: bold; display: block;" %>
          <%= form.number_field :document_number, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email", style: "font-weight: bold; display: block;" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
