<p style="color: green"><%= notice %></p>
<h1>Detalles del salón</h1>
<%= render @lounge %>
<p>
  <strong>Creado por:</strong>
  <%= @lounge.user.full_name %>
</p>

<h2>Clases en este salón:</h2>
<ul>
  <% @lessons.each do |lesson| %>
    <li>
      <%= lesson.name %> - <%= lesson.start_date %> a <%= lesson.end_date %> (Horario: <%= lesson.start_time.strftime('%H:%M') %> a <%= lesson.end_time.strftime('%H:%M') %>)
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Editar", edit_lounge_path(@lounge) %> |
  <%= link_to "Volver a la lista de salones", lounges_path %>

  <%= button_to "Eliminar", @lounge, method: :delete %>
</div>
