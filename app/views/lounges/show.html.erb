<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <p class="alert alert-success"><%= notice %></p>
        <h1>Lounge Details</h1>
      </div>

      <div class="card">
        <div class="card-body">
          <%= render @lounge %>
          
          <p>
            <strong>Created by:</strong> <%= @lounge.user.full_name %>
          </p>

          <h2>Classes in this lounge:</h2>
          <ul class="list-group">
            <% @lessons.each do |lesson| %>
              <li class="list-group-item">
                <%= lesson.name %> - <%= lesson.start_date %> to <%= lesson.end_date %> (Schedule: <%= lesson.start_time.strftime('%H:%M') %> to <%= lesson.end_time.strftime('%H:%M') %>)
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to "Edit", edit_lounge_path(@lounge), class: "btn btn-primary mr-2" %> |
        <%= link_to "Back to Lounges List", lounges_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Delete", @lounge, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
