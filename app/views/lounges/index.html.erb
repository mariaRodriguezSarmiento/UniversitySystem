<p style="color: green"><%= notice %></p>
<style>
  .lounge-card {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 8px;
    margin-bottom: 10px;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
  }

  .lounge-card p {
    margin-bottom: 0;
  }

  .lounge-card a {
    display: inline-block;
    margin-top: 5px;
    padding: 5px 10px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
  }

  .lounge-card a:hover {
    background-color: #0056b3;
  }
</style>

<h1>Salones</h1>
<%= link_to "Regresar", pages_home_path, class: "btn btn-primary" %><div id="lounges">
<%= link_to "Crear salon", new_lounge_path %>
<br>
<!-- app/views/lounges/index.html.erb -->

<h1>Lista de Salones</h1>

<%= form_with(url: lounges_path, method: "get") do %>
  <div class="field">
    <%= label_tag :code, "Buscar por código:" %>
    <%= text_field_tag :code, params[:code], placeholder: "Ingrese código del salón" %>
  </div>
  <%= submit_tag "Buscar", class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @lounges.each do |lounge| %>
      <tr>
        <td><%= lounge.name %></td>
        <td><%= lounge.code %></td>
        <td><%= link_to "Mostrar", lounge, class: "btn btn-primary" %></td>      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <% @lounges.each do |lounge| %>
    <div class="col-md-4 mb-3">
      <div class="lounge-card">
        <%= render lounge %>
        <p>
          <%= link_to "Mostrar este salón", lounge, class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
</div>

